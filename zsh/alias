	#Config
		alias zshrc='vim ~/.files/zsh/conf && source ~/.zshrc'

	#Other
		alias alpine='qemu-kvm -hda ~/bin/alpine/alpine.qcow -boot d -net nic -net user -m 256 -localtime'
		alias inst='sudo pacman -Syu'
		
	#Suffixes
	alias -s pdf='okular bg'

#Arch alias
