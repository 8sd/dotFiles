#osr
alias cms="ssh vs cms"
cmscommit () {
	mvn license:format;
	git status;
	if [ -z ${1+x} ]; then git commit .; else git commit $1; fi
}

cmsbnr () {
	echo "building cmsuite…";
	mvn deploy -DskipTests -P local-build;
	echo "cmsuite builded; launching suite";
	docker-compose -f ~/src/cmsuite/docker/compose-environments/cmsuite-test/docker-compose.yml up &;
	sleep 20;
	echo "cmsuite is up, waiting for test end…"
	kdialog --passivepopup 'environments setup, waiting for manual tests' --title 'cmsuite';
	read;
	echo "shutting down…"
	docker-compose -f ~/src/cmsuite/docker/compose-environments/cmsuite-test/docker-compose.yml down;
	echo "done…"
}

cmsintegration () {
	docker-compose -f ~/src/cmsuite/docker/compose-environments/cmsuite-integration/docker-compose.yml up -d;
	mvn deploy -P local-build;
	docker-compose -f ~/src/cmsuite/docker/compose-environments/cmsuite-integration/docker-compose.yml down;
}

cmslaunch () {
	docker-compose -f ~/src/cmsuite/docker/compose-environments/cmsuite-test/docker-compose.yml up &;
	read;
	echo "shutting down…"
	docker-compose -f ~/src/cmsuite/docker/compose-environments/cmsuite-test/docker-compose.yml down;

}

#VS
alias ensite="sudo /home/dudas/src/nginx.sh ensite"

#Docker
alias dls="docker ps -a" 
dp () {
	docker stop $@;
	docker rm $@;
}

dr () {
	docker stop $@;
	docker start $@;
}

#VBox
win10 () {
	lsmod | grep vbox > /dev/null;
	if [ $? -ne 0 ]; then 
		sudo modprobe vboxnetflt vboxnetadp vboxpci vboxdrvi;
	fi
	VBoxManage startvm "Win10";
}

