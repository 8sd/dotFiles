#aliases
	#std alias
		alias grep='grep -n --color' #grep always with colors
		alias l='pwd; ls  --color -la'
		alias l='ls --color'
		alias ls='pwd;ls -la --color'
		alias mkdir='mkdir -p'

	#Global Aliases
		alias -g G="| grep"
		alias -g bg=">/dev/null 2>&1 &"

	#ssh
		##uni
