		alias zshrc='vim ~/.files/zsh/conf && source ~/.zshrc'

	#Other
		alias httpd='docker run -dit -p 80:80 -v $PWD:/usr/local/apache2/htdocs/ httpd'

	#Suffixes
	alias -s pdf='okular bg'

